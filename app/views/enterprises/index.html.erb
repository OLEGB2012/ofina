<%  provide(:title, 'Организации')%>

<% content_for :span3 do %>      
  <div class="well sidebar-nav shadow">  
    <ul class="nav nav-list">  
      <li class="nav-header">Организации</li>  
      <li><%= link_to "Новая", new_enterprise_path%></li>  
      <li><%= link_to "Вернуться на главную", root_path %></li>               
    </ul>  
  </div>  
<% end  %>

<% content_for :span9 do %>
<div class="well sidebar-nav shadow" style="padding: 0.5em;">
<legend><%= image_tag("companies 64.png") %><strong>Список Организаций</strong></legend>
<table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th><div class="pagination-centered">Наименование</div></th>
        <th><div class="pagination-centered">УНН</div></th>
        <th><div class="pagination-centered">Вид экономической деятельности</div></th>
        <th colspan="2"><div class="pagination-centered">Действия</div></th>        
      </tr>  
    </thead>
    <tbody>
     <% @enterprises.each do |enterprise| %>        
        <tr>
          <td><div class="pull-left"><%= enterprise.org_name %></div></td>
          <td><div class="pagination-centered"><%= enterprise.uch_nomer_plat %></div></td>
          <td><div class="pull-left"><%= enterprise.vid_econom_deyatel %></div></td>
          <td>
            <div class="pagination-centered" style="min-width: 95px;">
              <%= link_to (enterprise), 
                   class: "btn btn-small btn-danger", 
                   method: :delete,                                             
                   confirm: "Вы уверены удалить "+enterprise.org_name+" ?" do %>
                Удалить...<i class="icon-trash icon-white"></i> 
              <% end %>
             </div>
          </td>
          <td>
            <div class="pagination-centered" style="min-width: 120px;">
              <%= link_to (enterprise_path(enterprise)), class: "btn btn-small btn-info" do %>
                Подробно...<i class="icon-info-sign icon-white"></i>
              <% end %>  
            </div>
          </td>         
        </tr>
      <% end %>      
    </tbody>    
  </table>
  <%= will_paginate %>
</div>
<% end  %>