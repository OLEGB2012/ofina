<%  provide(:title, 'Организации')%>

<% content_for :span3 do %>      
  <div class="well sidebar-nav">  
    <ul class="nav nav-list">  
      <li class="nav-header">Организации</li>  
      <li><%= link_to "Новая", new_enterprise_path%></li>  
      <li><%= link_to "Вернуться на главную", root_path %></li>               
    </ul>  
  </div>  
<% end  %>

<% content_for :span9 do %>
  <table class="table table-striped table-bordered table-condensed">
    <caption> Список Организаций </caption>
    <thead>
      <tr>
        <th><div class="pagination-centered">Наименование</div></th>
        <th><div class="pagination-centered">УНН</div></th>
        <th><div class="pagination-centered">Вид экономической деятельности</div></th>
        <th colspan="2"><div class="pagination-centered">Действия</div></th>        
      </tr>  
    </thead>
    <tbody>
     <% @enterprises.each do |enterprise| %>        
        <tr>
          <td><div class="pull-left"><%= enterprise.org_name %></div></td>
          <td><div class="pagination-centered"><%= enterprise.uch_nomer_plat %></div></td>
          <td><div class="pull-left"><%= enterprise.vid_econom_deyatel %></div></td>
          <td><div class="pagination-centered"><%= link_to "Удалить...", enterprise, method: :delete, confirm: "Вы уверены удалить "+enterprise.org_name+" ?" %></div></td>
          <td><div class="pagination-centered"><%= link_to "Подробно...", enterprise_path(enterprise) %></div></td>
        </tr>
      <% end %>      
    </tbody>    
  </table>
  <%= will_paginate %>
<% end  %>