<%  provide(:title, 'Результаты|Таблично')%> 

<% content_for :span3 do %>
 <%= link_to results_path(id: @enterprise), class: "btn btn-small btn-info" do %>
     К странице Результаты
 <% end %>  
<% end  %>

<% content_for :span9 do %>
  <legend><%= image_tag("Generate tables 64.png") %> Показатели Деловой Активности</legend>
<% end  %>

<table class="table table-striped table-bordered table-condensed" style="font-size: 11px">
    <caption> Предприятие - <strong><em><%= @enterprise.org_name %>.</em></strong> 
              За период : <strong><%= Russian::strftime(@enterprise.rab_date_beg,"%d %B %Y г.") %> - 
                                  <%= Russian::strftime(@enterprise.rab_date_end,"%d %B %Y г.") %></strong></caption>
    <thead>
      <tr>
        <th rowspan="3"><div class="pagination-centered" style="line-height: 20px; vertical-align:middle; min-width: 120px">На дату </br>(за период с начала года)</div></th>
        <th colspan="12"><div class="pagination-centered">Коэффициенты Оборачиваемости</div></th>        
      </tr>
      <tr>
        <th colspan="2"><div class="pagination-centered">Общей капитала</div></th>
        <th colspan="2"><div class="pagination-centered">Оборотных средств</div></th>
        <th colspan="2"><div class="pagination-centered">Запасов сырья, материалов и полуфабрикатов</div></th>
        <th colspan="2"><div class="pagination-centered">Готовой продукции</div></th>
        <th colspan="2"><div class="pagination-centered">Дебиторской задолженности</div></th>
        <th colspan="2"><div class="pagination-centered">Кредиторской задолженности</div></th>
      </tr>
      <tr>
        <th><div class="pagination-centered">Значение</div></th>
        <th><div class="pagination-centered">MAX-гр.2</div></th>
        <th><div class="pagination-centered">Значение</div></th>
        <th><div class="pagination-centered">MAX-гр.4</div></th>
        <th><div class="pagination-centered">Значение</div></th>
        <th><div class="pagination-centered">MAX-гр.6</div></th>
        <th><div class="pagination-centered">Значение</div></th>
        <th><div class="pagination-centered">MAX-гр.8</div></th>
        <th><div class="pagination-centered">Значение</div></th>
        <th><div class="pagination-centered">MAX-гр.10</div></th>
        <th><div class="pagination-centered">Значение</div></th>
        <th><div class="pagination-centered">MAX-гр.12</div></th>
      </tr>
      <tr>
        <th><div class="pagination-centered">1</div></th>
        <th><div class="pagination-centered">2</div></th>
        <th><div class="pagination-centered">3</div></th>
        <th><div class="pagination-centered">4</div></th>
        <th><div class="pagination-centered">5</div></th>
        <th><div class="pagination-centered">6</div></th>
        <th><div class="pagination-centered">7</div></th>
        <th><div class="pagination-centered">8</div></th>
        <th><div class="pagination-centered">9</div></th>
        <th><div class="pagination-centered">10</div></th>
        <th><div class="pagination-centered">11</div></th>
        <th><div class="pagination-centered">12</div></th>
        <th><div class="pagination-centered">13</div></th>
      </tr>
    </thead>
    <tbody>      
      <% @DA.each do |da| %>      
          <tr>       
               <td><div class="pagination-centered" ><%= Russian::strftime(da.date_period_end,"%d %B %Y г.") %></div></td>
               
               <% if da.Kobk==@DA_MAX_Kobk%>
                  <td><div class="pagination-centered" style="background-color: #90EE90"><%= display_result_data(da.Kobk) %></div></td>
               <% else %>
                  <td><div class="pagination-centered"><%= display_result_data(da.Kobk) %></div></td>
               <% end %>
               <td><div class="pagination-centered"><%= number_with_precision(@DA_MAX_Kobk-da.Kobk, precision: 4) %></div></td>
               
               <% if da.Kobs==@DA_MAX_Kobs%>
                  <td><div class="pagination-centered" style="background-color: #90EE90"><%= display_result_data(da.Kobs) %></div></td>
               <% else %>
                  <td><div class="pagination-centered"><%= display_result_data(da.Kobs) %></div></td>
               <% end %>
               <td><div class="pagination-centered"><%= number_with_precision(@DA_MAX_Kobs-da.Kobs, precision: 4) %></div></td>
               
               <% if da.Kobzs==@DA_MAX_Kobzs%>
                  <td><div class="pagination-centered" style="background-color: #90EE90"><%= display_result_data(da.Kobzs) %></div></td>
               <% else %>
                  <td><div class="pagination-centered"><%= display_result_data(da.Kobzs) %></div></td>
               <% end %>
               <td><div class="pagination-centered"><%= number_with_precision(@DA_MAX_Kobzs-da.Kobzs, precision: 4) %></div></td>
               
               <% if da.Kobgp==@DA_MAX_Kobgp%>
                  <td><div class="pagination-centered" style="background-color: #90EE90"><%= display_result_data(da.Kobgp) %></div></td>
               <% else %>
                  <td><div class="pagination-centered"><%= display_result_data(da.Kobgp) %></div></td>
               <% end %>
               <td><div class="pagination-centered"><%= number_with_precision(@DA_MAX_Kobgp-da.Kobgp, precision: 4) %></div></td>
               
               <% if da.Kobdz==@DA_MAX_Kobdz%>
                  <td><div class="pagination-centered" style="background-color: #90EE90"><%= display_result_data(da.Kobdz) %></div></td>
               <% else %>
                  <td><div class="pagination-centered"><%= display_result_data(da.Kobdz) %></div></td>
               <% end %>
               <td><div class="pagination-centered"><%= number_with_precision(@DA_MAX_Kobdz-da.Kobdz, precision: 4) %></div></td>
               
               <% if da.Kobkz==@DA_MAX_Kobkz%>
                  <td><div class="pagination-centered" style="background-color: #90EE90"><%= display_result_data(da.Kobkz) %></div></td>
               <% else %>
                  <td><div class="pagination-centered"><%= display_result_data(da.Kobkz) %></div></td>
               <% end %>
               <td><div class="pagination-centered"><%= number_with_precision(@DA_MAX_Kobkz-da.Kobkz, precision: 4) %></div></td>
          </tr>          
      <% end %>    
    </tbody>   
  </table>

<div><span class="status true" style="float: left"></span> - Наилучшее значение за период</div>