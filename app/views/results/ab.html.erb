            </tr>
          <% when 6 %>
            <tr>
               <td><div class="pull-left"><strong><%= ab.G1 %></strong></div></td>
               <td><div class="pagination-centered"><strong><%= ab.G2 %></strong></div></td>
               <td><div class="pagination-centered"><strong><%= display_result_data(ab.G3) %></strong></div></td>
