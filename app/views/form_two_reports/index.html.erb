<%  provide(:title, 'Отчёт о прибылях и убытках')%>

<% content_for :span3 do %>      
  <div class="well sidebar-nav">  
    <ul class="nav nav-list">  
      <li class="nav-header">Отчёт "О ПРИБЫЛЯХ И УБЫТКАХ"</li>  
      <li><%= link_to "Новый", new_enterprise_form_two_report_path%></li>  
      <li><%= link_to "К списку отчётов", @enterprise %></li>      
    </ul>  
  </div>  
<% end  %>

<% content_for :span9 do %>
  <table class="table table-striped table-bordered table-condensed">
    <caption>Список отчётов<strong> О ПРИБЫЛЯХ И УБЫТКАХ</strong> предприятия <strong><em><%= @OrgName %></em></strong></caption>
    <thead>
      <tr>
        <th><div class="pagination-centered">За период</div></th>
        <th><div class="pagination-centered">Валовая прибыль</div></th>
        <th><div class="pagination-centered">Совокупная прибыль(убыток)</div></th>
        <th colspan="2"><div class="pagination-centered">Действия</div></th>
      </tr>
    </thead>
    <tbody>
     <% @form_two_reports.each do |form_two_report| %>        
        <tr>          
          <td><div class="pull-left">C <%= Russian::strftime(form_two_report.date_period_beg,"%d %B %Y") %> г. <br/> По <%= Russian::strftime(form_two_report.date_period_end,"%d %B %Y") %> г.</div></td>
          <td><div class="pull-right"><%= number_with_delimiter(form_two_report.S030, delimiter: ' ') %></div></td>
          <td><div class="pull-right"><%= number_with_delimiter(form_two_report.S240, delimiter: ' ') %></div></td>
          <td>
            <div class="pagination-centered">
              <%= link_to ([@enterprise,form_two_report]), 
                   class: "btn btn-small btn-danger", 
                   method: :delete,                                             
                   confirm: "Вы уверены удалить ОТЧЁТ О ПРИБЫЛЯХ И УБЫТКАХ за период c "+Russian::strftime(form_two_report.date_period_beg,"%d %B %Y")+" года по "+
                                                                                       Russian::strftime(form_two_report.date_period_end,"%d %B %Y")+" года для "+@OrgName+" ?" do %>
                Удалить...<i class="icon-trash icon-white"></i> 
              <% end %>
             </div>
          </td>
          <td>
            <div class="pagination-centered">
              <%= link_to (enterprise_form_two_report_path(@enterprise,form_two_report)), class: "btn btn-small btn-info" do %>
                Подробно...<i class="icon-info-sign icon-white"></i>
              <% end %>  
            </div>
          </td>          
        </tr>
      <% end %>      
    </tbody>    
  </table>
  <%= will_paginate %>
<% end  %>
