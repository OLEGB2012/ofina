<%  provide(:title, 'Расчёты')%>

<% content_for :span3 do %>      
  <div class="well sidebar-nav">  
    <ul class="nav nav-list">  
      <li class="nav-header">РЕЖИМ РАСЧЁТОВ</li>       
      <li><%= link_to "К списку отчётов", enterprise_path(params[:id]) %></li>      
    </ul>  
  </div>  
<% end  %>

<% content_for :span9 do %>
  <legend>Расчёт финансовых показателей</legend> 
  <%#= params.inspect %>
  <%#= @form_one_reports.inspect %>
  <table class="table table-striped table-bordered table-condensed">
    <tbody>
      <tr>
        <td><div class="pull-left">Для предприятия</div></td>
        <td><div class="pull-left"><%= @enterprise.org_name %></div></td>
      </tr>      
      <tr>
        <td><div class="pull-left">Начальная дата рабочего интервала</div></td>
        <td><div class="pull-left"><%= Russian::strftime(@enterprise.rab_date_beg,"%d %B %Y г.") %></div></td>
      </tr>
      <tr>
        <td><div class="pull-left">Конечная дата рабочего интервала</div></td>
        <td><div class="pull-left"><%= Russian::strftime(@enterprise.rab_date_end,"%d %B %Y г.") %></div></td>
      </tr>
    </tbody>    
  </table>  
  <div class="form-actions">
    <%= link_to "Выполнить", calc_run_path(id: params[:id]) , class: "btn btn-large btn-primary" %> 
  </div>
<% end  %>